<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvFriendName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:fontFamily="sans-serif-bold"
                android:textColor="@color/text_primary" />

            <!-- 안 읽은 메시지 배지 추가 -->
            <TextView
                android:id="@+id/tvUnreadBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_unread_badge"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvMatchStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:background="@drawable/bg_status_badge"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvLastMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- 매칭 취소 관련 컨트롤 섹션 -->
        <LinearLayout
            android:id="@+id/layoutPartnerUnmatchRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:background="#FEF2F2"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상대방이 매칭 취소를 요청했습니다."
                android:textColor="#EF4444"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUnmatchAccept"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="수락(해제)"
                    android:layout_marginEnd="4dp"
                    app:backgroundTint="#EF4444"
                    app:cornerRadius="8dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUnmatchReject"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="거절(유지)"
                    android:layout_marginStart="4dp"
                    app:cornerRadius="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 내가 상대방에게 취소 요청을 보낸 경우 (철회) -->
        <LinearLayout
            android:id="@+id/layoutMyUnmatchRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:background="#F8FAFC"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상대방의 매칭 취소 수락을 기다리고 있습니다."
                android:textColor="#64748B"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWithdrawUnmatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="요청 철회"
                app:backgroundTint="#64748B"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRequestUnmatch"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="매칭 취소 요청"
            android:textColor="#94A3B8"
            android:textSize="11sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
